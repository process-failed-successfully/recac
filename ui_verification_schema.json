{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UIVerificationRequests",
  "type": "object",
  "properties": {
    "requests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "feature_id": {
            "type": "string",
            "description": "The ID of the feature being verified (from feature_list.json)"
          },
          "instruction": {
            "type": "string",
            "description": "Specific instructions for the human tester"
          },
          "status": {
            "type": "string",
            "enum": ["pending_human", "pass", "fail"],
            "description": "Current status of the verification"
          },
          "feedback": {
            "type": "string",
            "description": "Optional detailed feedback from the human tester"
          }
        },
        "required": ["feature_id", "instruction", "status"]
      }
    }
  },
  "required": ["requests"]
}
